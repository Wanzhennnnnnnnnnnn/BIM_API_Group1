<Window x:Class="BIM_API_Automated_Carbon_Emission_Estimation_System.SelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BIM_API_Automated_Carbon_Emission_Estimation_System"
        mc:Ignorable="d"
        Title="互動式資料擷取" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        MinWidth="300" MinHeight="400"
        FontFamily="Microsoft JhengHei UI">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 標題 -->
        <TextBlock Grid.Row="0" Text="請選擇要擷取的項目" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- 類別篩選 -->
        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" Padding="10" CornerRadius="4">
            <StackPanel>
                <TextBlock Text="1. 篩選元素類別" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <CheckBox x:Name="CheckWalls" Content="牆 (Walls)" IsChecked="True" Margin="5"/>
                <CheckBox x:Name="CheckFloors" Content="樓板 (Floors)" IsChecked="True" Margin="5"/>
                <CheckBox x:Name="CheckColumns" Content="結構柱 (Columns)" IsChecked="True" Margin="5"/>
                <CheckBox x:Name="CheckFraming" Content="結構梁 (Framing)" IsChecked="True" Margin="5"/>
                <CheckBox x:Name="CheckRebar" Content="鋼筋 (Rebar)" IsChecked="True" Margin="5"/>
            </StackPanel>
        </Border>

        <!-- 樓層篩選 -->
        <Border Grid.Row="2" BorderBrush="LightGray" BorderThickness="1" Padding="10" CornerRadius="4" Margin="0,10,0,10">
            <StackPanel>
                <TextBlock Text="2. 篩選樓層 (可複選)" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBlock Text="若不選擇任何樓層，將擷取所有樓層。" FontStyle="Italic" FontSize="11" Margin="5,0,5,5"/>
                <ListBox x:Name="LevelsListBox" 
                         SelectionMode="Multiple" 
                         MaxHeight="200"
                         BorderThickness="1"
                         BorderBrush="Gray">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- 按鈕 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="OkButton" Content="開始擷取" Width="100" Height="30" Margin="0,0,10,0" IsDefault="True" Click="OkButton_Click" Background="#007ACC" Foreground="White"/>
            <Button x:Name="CalculateButton" Content="快速計算" Width="80" Height="30" Margin="0,0,10,0" IsCancel="True" Click="CalculateButton_Click"/>
            <Button x:Name="CancelButton" Content="取消" Width="80" Height="30" IsCancel="True" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
